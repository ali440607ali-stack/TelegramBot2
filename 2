from telethon import TelegramClient, events
import os

# Ø§Ù‚Ø±Ø£ Ø§Ù„Ù‚ÙŠÙ… Ù…Ù† Ø§Ù„Ù…ØªØºÙŠØ±Ø§Øª Ø§Ù„Ø¨ÙŠØ¦ÙŠØ© (Ø±Ø­ Ù†Ø­Ø·Ù‡Ù… ÙÙŠ Render)
api_id = int(os.getenv("2972444"))
api_hash = os.getenv("4ba5125466e20c7554c98da3a4815ba")
bot_token = os.getenv("BOT_TOKEN")

# Ø§Ù„Ù‚Ù†ÙˆØ§Øª
source_channels = os.getenv("@Syria_Now7").split(",")  # Ù…Ø«Ù„: @ch1,@ch2
target_channel = os.getenv("@SyriaToday4")  # Ù…Ø«Ù„: @mychannel

client = TelegramClient("bot", api_id, api_hash).start(bot_token=bot_token)

@client.on(events.NewMessage(chats=source_channels))
async def handler(event):
    try:
        await client.send_message(target_channel, event.message)
    except Exception as e:
        print(f"Error: {e}")

print("ğŸš€ Bot is running...")
client.run_until_disconnected()
